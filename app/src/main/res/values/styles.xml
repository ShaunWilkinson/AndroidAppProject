<resources>
    <!-- Base application theme. -->

    <style name="headingLayout" parent="Theme.AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="drugTableRow" parent="Theme.AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="drugTable1stColumn" parent="Theme.AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="drugTable2ndColumn" parent="Theme.AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="drugTable3rdColumn" parent="Theme.AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="normalTxt" parent="Theme.AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="spacer" parent="Theme.AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="Dialogs" parent="Theme.AppTheme">
        <item name="android:textColor">#000000</item>
    </style>
    <!--
        <style name="customDialog" parent="Theme.AppTheme">
            <item name="android:windowNoTitle">false</item>
            <item name="android:windowBackground">@color/dialogBackground</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
            <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
            <item name="android:textColor">#000000</item>
            <item name="android:windowFullscreen">false</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        </style>
     -->

    <!-- CUSTOM DIALOG START -->

    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle
        </item>
    </style>

    <style name="DialogWindowTitle.AppTheme" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.AppTheme.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/colorTxtWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CUSTOM DIALOG END -->

    <style name="cityHead" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText" parent="Theme.AppTheme">
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="drugDialogHeader" parent="Theme.AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="drugDialogDesc" parent="Theme.AppTheme">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="value" parent="Theme.AppTheme">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="boughtFor" parent="Theme.AppTheme">

    </style>

    <style name="dialogTitle" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="weaponDealerBtn" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/weapon_dealer_btn</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="weaponDealerImg" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="weaponDealerBtnTxt" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>

    <style name="weaponDealerHeadTxt" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorTxtWhite</item>
    </style>
</resources>
